{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",              // ⬅️ Output directory should be outside /src
    "rootDir": "src",              // ⬅️ Keep source files in /src
    "resolveJsonModule": true,     // ⬅️ If you're importing .json files
    "moduleResolution": "node"     // ⬅️ Recommended for Node.js projects
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}

